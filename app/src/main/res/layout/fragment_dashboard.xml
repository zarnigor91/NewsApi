<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    >

    <com.google.android.material.appbar.CollapsingToolbarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
        >


<com.google.android.material.appbar.MaterialToolbar
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_single"
            android:layout_alignParentLeft="true"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imb_notification"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_notification"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toLeftOf="@+id/imb_notification"
            android:src="@drawable/ic_music"
            android:layout_marginRight="10dp"
            />
    </RelativeLayout>


</com.google.android.material.appbar.MaterialToolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_collapseMode="parallax"
        app:layout_collapseParallaxMultiplier="0.9"
        >
<androidx.appcompat.widget.AppCompatTextView

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="total funds"
    android:layout_marginTop="50dp"
    android:gravity="center"
    android:textSize="12sp"
    android:textColor="#ABABAB"
    android:layout_gravity="left|center"
    />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:paddingLeft="20dp"
            >
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:src="@drawable/ic_secret"
                android:layout_gravity="right|center"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_my_balance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="11111111"
                android:textColor="#282828"
                android:textSize="26sp"
                android:gravity="center"
               android:inputType="number"
                android:paddingLeft="20dp"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Sum"
                android:textSize="14sp"
                android:paddingLeft="10dp"
                />
<androidx.appcompat.widget.AppCompatImageView
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="0.7"
    android:src="@drawable/ic_down"
    android:layout_gravity="center"
    />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/backround_add"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:text="Add card"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="#282828"
            android:textStyle="bold"
            />
    </LinearLayout>
    </com.google.android.material.appbar.CollapsingToolbarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
     <androidx.recyclerview.widget.RecyclerView
         android:id="@+id/rv_paymet_card"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
          tools:itemCount="6"
         tools:listitem="@layout/item_payment"
         />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_paymet_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:itemCount="6"
            tools:listitem="@layout/item_payment"

            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_paymet_servis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:itemCount="6"
            tools:listitem="@layout/item_payment"
            />
        </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>