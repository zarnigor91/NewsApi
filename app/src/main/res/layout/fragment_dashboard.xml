<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fitsSystemWindows="true"
    app:layout_anchor="@+id/refresh"
    app:layout_anchorGravity="bottom|center_vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="#FFFFFF">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_collapseMode="parallax"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:title="safadfasfad">

            <LinearLayout
                android:id="@+id/liner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40dp"
                android:fitsSystemWindows="true"
                android:orientation="vertical"
                app:layout_collapseMode="parallax"
                app:layout_scrollFlags="scroll|snap"
                tools:ignore="ContentDescription">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_total"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:layout_marginTop="80dp"
                    android:gravity="center"
                    android:text="@string/total_funds"
                    android:textColor="#ABABAB"
                    android:textSize="12sp"
                    app:layout_scrollFlags="scroll|snap" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:fitsSystemWindows="true"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:scaleType="centerCrop"
                    android:weightSum="4"
                    app:layout_collapseMode="parallax">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_close"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center"
                        android:layout_weight="0.7"
                        android:src="@drawable/ic_secret"

                        />
                   <LinearLayout
                       android:id="@+id/liner_valute"
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="2.5"
                       android:orientation="horizontal"
                       android:layout_gravity="center"
                       android:weightSum="2.3"
                       >
                       <androidx.appcompat.widget.AppCompatTextView
                           android:id="@+id/tv_my_balance"
                           android:layout_width="0dp"
                           android:layout_height="match_parent"
                           android:layout_weight="1.8"
                           android:inputType="number"
                           android:paddingLeft="10dp"
                           android:text="11111111"
                           android:textColor="#282828"
                           android:textSize="20sp" />

                       <androidx.appcompat.widget.AppCompatTextView
                           android:id="@+id/tv_valute"
                           android:layout_width="0dp"
                           android:layout_height="match_parent"
                           android:layout_weight="0.5"
                           android:paddingLeft="10dp"
                           android:text="Sum"
                           android:layout_gravity="center_vertical"
                           android:paddingTop="5dp"
                           android:textSize="14sp" />
                   </LinearLayout>


                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_down"
                        android:layout_width="13dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:layout_weight="0.5"
                        android:paddingRight="15dp"
                        android:src="@drawable/ic_down" />
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/backround_add"
                    android:gravity="center"
                    android:text="@string/add_card"
                    android:textColor="#282828"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar_dash"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:nestedScrollingEnabled="false"
                app:layout_collapseMode="pin"
                app:layout_scrollFlags="scroll|enterAlways|snap">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <androidx.appcompat.widget.AppCompatImageView
                        app:layout_constraintStart_toStartOf="parent"
                        android:id="@+id/img_loud"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_loud"
                       android:paddingTop="10dp"
                       />

                    <SearchView
                        android:id="@+id/searchView"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:iconifiedByDefault="false"
                        android:queryHint="@string/search"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/img_loud"

                        android:gravity="center_horizontal"
                       />

<!--                    <androidx.appcompat.widget.AppCompatTextView-->
<!--                        android:id="@+id/tv_balance"-->
<!--                        android:layout_width="100dp"-->
<!--                        android:layout_height="match_parent"-->
<!--                        android:gravity="left"-->
<!--                        android:layout_marginTop="15dp"-->
<!--                        android:lines="1"-->
<!--                        app:layout_constraintLeft_toRightOf="@+id/img_loud"-->
<!--                        app:layout_constraintEnd_toStartOf="@+id/imb_earphons"-->
<!--                        android:visibility="gone" />-->

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imb_earphons"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingRight="10dp"
                        android:src="@drawable/ic_earphones"
                        android:paddingTop="10dp"
                        app:layout_constraintRight_toLeftOf="@+id/imb_notification"
                        />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imb_notification"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:src="@drawable/ic_natification"
                        android:paddingTop="10dp"
                     />
                </androidx.constraintlayout.widget.ConstraintLayout>


            </com.google.android.material.appbar.MaterialToolbar>


        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <uk.co.imallan.jellyrefresh.JellyRefreshLayout
        android:id="@+id/jelly_refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_anchorGravity="bottom|right|end"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:background="#FFFFFF"
            android:focusable="true"
            android:scrollbars="none"
            app:layout_collapseMode="parallax">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_paymet_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:itemCount="6"
                    tools:listitem="@layout/item_payment" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_paymet_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:itemCount="6"
                    tools:listitem="@layout/item_payment"

                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_paymet_servis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:itemCount="6"
                    tools:listitem="@layout/item_payment" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_paymet_servis1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:itemCount="6"
                    tools:listitem="@layout/item_payment" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_paymet_servis2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:itemCount="6"
                    tools:listitem="@layout/item_payment" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_paymet_servis3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:itemCount="6"
                    tools:listitem="@layout/item_payment" />
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>
    </uk.co.imallan.jellyrefresh.JellyRefreshLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>